{% extends 'base.html.twig' %}
{% block content %}


    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header"><center>
                            <h3 class="box-title">Liste des Promotions</h3></center>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <td>Nom </td>
                                <td>Date debut</td>
                                <td>Date fin </td>
                                <td>Pourcentage</td>
                                <td>Nom produit</td>
                                <td>Nouveau prix</td>

                                <td>Supprimer</td>
                                <td>Modifier</td>
                            </tr>
                            </thead>

                            <tbody>
                            {%  for entity in Promotion %}
                                <tr>
                                    <td>{{ entity.nom }}</td>
                                    <td>{{ entity.datedebut| date  }}</td>
                                    <td>{{ entity.datefin| date  }}</td>
                                    <td>{{ entity.pourcentage }} %</td>
                                    <td>{{ entity.nomproduit }}</td>
                                    <td>{{ entity.nouveauprix }} DT</td>

                                    <td><a href="{{ path('supprimerPromotion',{'idpromotion': entity.idpromotion}) }}" class="btn btn-danger">Supprimer</a></td>
                                    <td><a href="{{ path('modifierPromotion',{'idpromotion': entity.idpromotion}) }}" class="btn btn-success">Modifier</a></td>

                                </tr>
                            {% else %}
                                <h1>Table is empty</h1>
                            {%  endfor %}
                            </tbody>
                        </table>
                        <center>
                            <a href="{{ path('ajouterPromotion') }}" class="btn btn-green">Ajouter Des Promotions</a>

                            <td><a href="{{ path('mail') }}" class="btn btn-danger">Envoyer mail</a></td>








                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row no-print">

        </div>
    </section>


{% endblock %}

